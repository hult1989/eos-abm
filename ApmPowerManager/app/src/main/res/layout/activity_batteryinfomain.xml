<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hult.netlab.pku.apmpowermanager.batteryinfomain">


    <RelativeLayout
        android:id="@+id/process"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/icon_teal"
        android:paddingBottom="20dp"
        android:layout_centerHorizontal="true">

        <hult.netlab.pku.apmpowermanager.DonutProgress
            android:id="@+id/donut_progress"
            custom:donut_background_color="@color/icon_teal"
            custom:donut_unfinished_color="@color/google_teal"
            custom:donut_finished_color="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_width="220dp"
            android:layout_height="220dp"
            custom:donut_text_size="70dp"
            custom:donut_text_color="@android:color/white"
            custom:donut_unfinished_stroke_width="5dp"
            custom:donut_finished_stroke_width="5dp"
            custom:donut_progress="10" />

    </RelativeLayout>




    <android.support.v4.view.ViewPager
        android:layout_marginTop="16dp"
        android:id="@+id/sub_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/process">

    </android.support.v4.view.ViewPager>



</RelativeLayout>
