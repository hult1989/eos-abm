<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="12dp"
    android:orientation="vertical"
    tools:context="hult.netlab.pku.apmpowermanager.appinfoActivity">
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="fill_parent">

         <LinearLayout
        android:background="@android:color/white"
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">
             <RelativeLayout
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content">

                 <ImageView
                     android:id="@+id/image"
                     android:src="@mipmap/chrome"
                     android:layout_width="64dp"
                     android:layout_height="64dp"
                     android:paddingTop="8dp"
                     android:paddingBottom="8dp"
                     android:paddingLeft="8dp"
                     android:paddingRight="8dp"
                     android:layout_alignParentTop="true"
                     android:layout_alignParentStart="true" />

                 <TextView
                     android:id="@+id/appname"
                     android:text="Chrome"
                     android:layout_marginTop="12dp"
                     android:layout_marginBottom="4dp"
                     android:layout_toRightOf="@+id/image"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="16sp"/>
                 <TextView
                     android:id="@+id/batteryconsumption"
                     android:text="Battery: 70%"
                     android:layout_marginTop="12dp"
                     android:layout_alignParentRight="true"
                     android:paddingRight="16dp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="16sp"
                     android:layout_alignTop="@+id/title" />

                 <ProgressBar
                     android:layout_width="match_parent"
                     android:layout_marginRight="16dp"
                     android:layout_height="wrap_content"
                     style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                     android:progress="70"
                     android:max="100"
                     android:id="@+id/bar"
                     android:layout_below="@+id/appname"
                     android:layout_toEndOf="@+id/image" />

             </RelativeLayout>




    </LinearLayout>

         <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/frame"
            android:background="@android:color/white"
            android:layout_width="fill_parent"
            android:layout_height="256dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp">
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:text="NETWORK TRAFFIC: "
            android:textSize="16sp"/>


        <LinearLayout
            android:background="@android:color/white"
            android:id="@+id/cardview"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:text="Upload: "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textSize="14sp"
                    android:id="@+id/upload"
                    android:text="Upload: "/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/ltgry">
            </LinearLayout>
            <RelativeLayout
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_width="fill_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:text="Download: "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"

                    android:textSize="14sp"
                    android:id="@+id/download"
                    android:text="Download: "/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

         <LinearLayout
             android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="64dp"
            android:padding="8dp"
            android:layout_alignParentBottom="true">
            <Button
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="8dp"
                android:clickable="false"
                android:layout_weight="2"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1.2"
                android:paddingLeft="8dp"
                android:textColor="@color/google_teal"
                android:paddingRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:text="uninstall"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/uninstall"/>


            <Button
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginLeft="4dp"
                android:text="close"
                android:textColor="@color/google_teal"
                android:layout_weight="0.8"
                android:focusable="true"
                android:id="@+id/close"/>


            </LinearLayout>
</RelativeLayout>
